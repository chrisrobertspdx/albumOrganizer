<% require 'pry' %>

<div class="greeting">
    <h1>Welcome, <%= current_user.email %>!</h1>
</div>

<br></br>

<div class="artistList">
    <h2>Artists</h2>
    <% #binding.pry %>
    <% if current_user.artists.empty? %>
        <p>No Artists currently added</p>
    <% else %>
        <ul>
            <% current_user.artists.each do |artist| %>
                <li><%= link_to artist.name, artist_path(artist) %></li>
            <% end %>
        </ul>
    <% end %>
</div>

<br></br>

<div class="links">
    <%= link_to("Sign out", destroy_user_session_path, :method => 'delete') %>
</div>