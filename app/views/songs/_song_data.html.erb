<div class="songData">
    <div class="albumCover">
        <%= image_tag song.album.album_cover.url(:icon) %>
    </div>
    <h1 id="songTitle"><%= song.name %></h1>
    <label>Artist: </label>
    <p id="songArtist"><%= song.artist.name %></p>
    <label>Album: </label>
    <p id="songAlbum"><%= song.album.name %></p>
    <label>Genre: </label>
    <p id="songGenre"><%= song.genre.name %></p>
    
    <% if user_song?(song) %>
        <div class="options">
            <%= link_to "Edit Song", edit_song_path(song) %>
            <%= link_to "Delete Song", song_path(song), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
        </div>
    <% end %>
</div>