<div class="albumData">
    <h1><%= @album.name %></h1>
</div>

<br></br>

<div class="songList">
    <h2>Songs</h2>
    <% if @album.songs.empty? %>
        <p>Album is empty</p>
    <% else %>
        <ul>
            <% @album.songs.each do |song| %>
                <li><%= link_to ("#{song.name} [#{song.time}]"), song_path(song) %></li>
            <% end %>
        </ul>
    <% end %>
</div>

<br></br>

<div class="links">
    <%= link_to "Back to Artist", artist_path(@album.artist) %>
    <%= link_to "Back to User", user_path(current_user) %>
</div>