<div class="artistData">
    <h1><%= @artist.name %></h1>
    <p><%= @artist.bio %></p>
    <% if has_genres?(@artist) %>
        <p>Genres: 
            <ul>
                <% @artist.genres.each do |genre| %>
                    <li><%= genre.name %></li>
                <% end %>
            </ul>
        </p>
    <% end %>
</div>

<div class="albumList">
    <h2>Albums</h2>
    <% if has_albums?(@artist) %>
        <p>No Albums currently added</p>
    <% else %>
        <ul>
            <% @artist.albums.each do |album| %>
                <li><%= link_to album.name, artist_album_path(@artist, album) %></li>
            <% end %>
        </ul>
    <% end %>
    
    <br></br>
    
    <% if user_artist?(@artist) %>
        <%= link_to "Add Album", new_artist_album_path(@artist) %>
        <%= link_to "Edit Artist", edit_artist_path(@artist) %>
        <%= link_to "Delete Artist", artist_path(@artist), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
    <% end %>
</div>

<br></br>

<div class="links">
    <%= link_to "Back to User", user_path(current_user) %>
</div>